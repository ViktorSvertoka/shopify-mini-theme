{{ 'designer-cards.css' | asset_url | stylesheet_tag }}

<section class="designer-cards">
  <div class="designer-cards__container">
    {% if section.settings.heading != blank %}
      <h2 class="designer-cards__title">{{ section.settings.heading }}</h2>
    {% endif %}

    {% assign designers = collection.metafields.custom.designers.value %}

    {% if designers %}
      <div class="designer-cards__grid">
        {% for d in designers %}
          {% render 'designer-card', d: d %}
        {% endfor %}
      </div>
    {% else %}
      <p>У цієї колекції ще не додано дизайнерів.</p>
    {% endif %}
  </div>

  {% schema %}
  {
    "name": "Designer cards",
    "templates": ["collection"],
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Заголовок",
        "default": "Our Designers"
      }
    ],
    "presets": [{ "name": "Designer cards" }]
  }
  {% endschema %}
</section>

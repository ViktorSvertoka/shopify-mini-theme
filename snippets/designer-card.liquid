<article class='designer-card'>
  {%- comment -%} Photo {%- endcomment -%}
  {% if d.photo %}
    <div class='designer-card__avatar'>
      {{
        d.photo
        | image_url: width: 320
        | image_tag:
          loading: 'lazy',
          decoding: 'async',
          alt: d.name,
          class: 'designer-card__photo'
      }}
    </div>
  {% endif %}

  {%- comment -%} Name {%- endcomment -%}
  <h3 class='designer-card__name'>{{ d.name }}</h3>

  {%- comment -%} Role {%- endcomment -%}
  {% if d.role %}
    <p class='designer-card__role'>{{ d.role }}</p>
  {% endif %}

  {%- comment -%} Bio {%- endcomment -%}
  {% if d.bio %}
    <h4 class='designer-card__section-label'>Bio</h4>
    <p class='designer-card__bio'>{{ d.bio }}</p>
  {% endif %}

  {%- comment -%} Tags (метафилды) {%- endcomment -%}
  {% if d.tags.value and d.tags.value.size > 0 %}
    <h4 class='designer-card__section-label'>Tags</h4>
    <ul class='designer-card__tags'>
      {% for tag in d.tags.value %}
        <li class='designer-card__tag'>{{ tag }}</li>
      {% endfor %}
    </ul>
  {% endif %}

  {%- comment -%} Portfolio links (URL) {%- endcomment -%}
  {% if d.portfolio_links %}
    <h4 class='designer-card__section-label'>Portfolio links</h4>
    <a
      href='{{ d.portfolio_links }}'
      class='designer-card__link'
      target='_blank'
      rel='noopener'
    >
      {{ d.portfolio_links }}
    </a>
  {% endif %}

  {%- comment -%} DOB {%- endcomment -%}
  {% if d.date_of_birth %}
    <h4 class='designer-card__section-label'>Date of birth</h4>
    <div class='designer-card__dob'>
      {{ d.date_of_birth | date: '%B %d, %Y' }}
    </div>
  {% endif %}

  {%- comment -%} Verified {%- endcomment -%}
  {% if d.verified_designer == true %}
    <div class='designer-card__verified designer-card__verified--yes'>
      <span class='designer-card__verified-icon'>✔︎</span> Verified Designer
    </div>
  {% else %}
    <div class='designer-card__verified designer-card__verified--no'>
      <span class='designer-card__verified-icon'>✖︎</span> Not verified
    </div>
  {% endif %}
</article>

<p class="text-dark">Select Size:</p>
<div class="flex flex-wrap justify-around gap-2 mb-4">
  {%- assign sizes = banner_product.variants | map: 'option2' | uniq -%}
  {%- for size in sizes -%}
    {%- assign variant = banner_product.variants | where: 'option2', size | first -%}
    {%- if variant -%}
      <button 
        type="button" 
        class="js-size-btn p-3 text-sm leading-[1.4] bg-white border border-stroke rounded-lg cursor-pointer w-[136px] hover:border-gray-light"
        data-variant-id="{{ variant.id }}"
        data-available="{{ variant.available }}"
      >
        EU {{ size }}
      </button>
    {%- endif -%}
  {%- endfor -%}
</div>

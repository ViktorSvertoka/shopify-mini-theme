<p class="text-dark mb-4">Select Size:</p>

<div 
  class="grid gap-2 w-full max-w-[420px] mx-auto"
  style="grid-template-columns: repeat(3, 1fr); grid-template-rows: repeat(2, 1fr);"
>
  {%- assign sizes = banner_product.variants | map: 'option2' | uniq -%}
  {%- for size in sizes -%}
    {%- assign variant = banner_product.variants | where: 'option2', size | first -%}
    {%- if variant -%}
      <button 
        type="button"
        class="js-size-btn text-sm leading-md bg-white border border-stroke rounded-lg cursor-pointer hover:border-gray-light flex items-center justify-center h-[48px] transition-colors duration-200"
        data-variant-id="{{ variant.id }}"
        data-available="{{ variant.available }}"
      >
        EU {{ size }}
      </button>
    {%- endif -%}
  {%- endfor -%}
</div>


{%- capture images_json -%}
  [
  {%- if banner_product.images != blank -%}
    {%- for image in banner_product.images -%}
      "{{ image | image_url: width: 800 }}"{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  {%- else -%}
    "{{ 'product-placeholder.jpg' | asset_url }}"
  {%- endif -%}
  ]
{%- endcapture -%}

<div class="js-gallery max-w-[568px] w-full flex items-center flex-col-reverse gap-6 mx-auto xl:max-w-[650px] xl:items-start xl:flex-row xl:justify-between xl:mx-0" data-all-images='{{ images_json | strip_newlines }}'>
  <div class="js-thumbs m-0 w-full px-[15px] opacity-100 transition-opacity duration-300 flex gap-4 xl:w-[88px] xl:p-0 xl:flex-col xl:flex-wrap xl:gap-0"></div>
  <div class="js-main banner-product__main"></div>
</div>
